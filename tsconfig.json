{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "lib": ["ESNext", "DOM"],
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./",
      "paths": {
        "@pages/*": ["pages/*"],
        "@tests/*": ["tests/*"]
      },
      "types": ["node", "@playwright/test"]
    },
    "include": ["tests", "pages", "src"]
  }